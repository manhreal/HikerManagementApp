<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/d_trip_tool_bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@drawable/toolbar_gradient"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:navigationIconTint="@android:color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="Place:"
                        android:textColor="#78909C"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_d_trip_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Trip name"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:textColor="#263238"
                        android:layout_marginBottom="20dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tv_d_trip_destination"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Madrid, Spain"
                            android:textSize="16sp"
                            android:textColor="#263238"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Date:"
                            android:textSize="15sp"
                            android:textColor="#78909C" />

                        <TextView
                            android:id="@+id/tv_d_trip_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="15/11/2025"
                            android:textSize="16sp"
                            android:textColor="#263238" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Length:"
                            android:textSize="15sp"
                            android:textColor="#78909C" />

                        <TextView
                            android:id="@+id/tv_d_trip_length"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="12.5 km"
                            android:textSize="16sp"
                            android:textColor="#00897B"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Difficulty:"
                            android:textSize="15sp"
                            android:textColor="#78909C" />

                        <TextView
                            android:id="@+id/tv_d_trip_difficulty"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Hard"
                            android:textSize="16sp"
                            android:textColor="#FB8C00"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="14dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:text="Parking:"
                            android:textSize="15sp"
                            android:textColor="#78909C" />

                        <TextView
                            android:id="@+id/tv_d_trip_require_parking"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yes"
                            android:textSize="16sp"
                            android:textColor="#1E88E5" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ECEFF1"
                        android:layout_marginVertical="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“ Description"
                        android:textSize="16sp"
                        android:textColor="#78909C"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:id="@+id/tv_d_trip_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No description"
                        android:textSize="15sp"
                        android:textColor="#546E7A"
                        android:lineSpacingMultiplier="1.3" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_d_trip_edit"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Update"
                            android:textSize="15sp"
                            android:textColor="@color/white"
                            android:paddingVertical="12dp"
                            app:backgroundTint="#1E88E5"
                            app:cornerRadius="10dp"
                            android:layout_marginEnd="8dp"
                            style="@style/Widget.MaterialComponents.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_d_trip_delete"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delete"
                            android:textSize="15sp"
                            android:paddingVertical="12dp"
                            android:textColor="@color/white"
                            app:backgroundTint="#E53935"
                            app:cornerRadius="10dp"
                            android:layout_marginStart="8dp"
                            style="@style/Widget.MaterialComponents.Button" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Observations"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#263238" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_d_trip_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:paddingHorizontal="20dp"
                    app:backgroundTint="#00897B"
                    app:cornerRadius="20dp"
                    style="@style/Widget.MaterialComponents.Button" />
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pagination_mode_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Display Mode:"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#263238" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_mode_all"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="View All"
                            android:textSize="12sp"
                            android:minHeight="0dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="0dp"
                            android:layout_marginEnd="8dp"
                            app:backgroundTint="#00897B"
                            app:cornerRadius="8dp"
                            style="@style/Widget.MaterialComponents.Button" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_mode_pagination"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:text="Pagination"
                            android:textSize="12sp"
                            android:minHeight="0dp"
                            android:paddingHorizontal="16dp"
                            android:paddingVertical="0dp"
                            app:backgroundTint="#90A4AE"
                            app:cornerRadius="8dp"
                            style="@style/Widget.MaterialComponents.Button" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/page_size_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Items per page:"
                            android:textSize="14sp"
                            android:textColor="#546E7A" />

                        <Spinner
                            android:id="@+id/spinner_page_size"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:minWidth="100dp"
                            android:background="@android:drawable/btn_dropdown"
                            android:paddingHorizontal="12dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_observation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:clipToPadding="false" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pagination_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="12dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_prev_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â—€ Prev"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        app:backgroundTint="#1E88E5"
                        app:cornerRadius="8dp"
                        style="@style/Widget.MaterialComponents.Button" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingHorizontal="16dp">

                        <TextView
                            android:id="@+id/tv_page_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Page 1 / 5"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#263238" />

                        <TextView
                            android:id="@+id/tv_items_info"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(1-5 of 25 items)"
                            android:textSize="12sp"
                            android:textColor="#78909C"
                            android:layout_marginTop="2dp" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_next_page"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Next â–¶"
                        android:textSize="13sp"
                        android:textColor="@color/white"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        app:backgroundTint="#1E88E5"
                        app:cornerRadius="8dp"
                        style="@style/Widget.MaterialComponents.Button" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:id="@+id/observation_state_empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="40dp"
                android:visibility="gone">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#E0F2F1"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”"
                        android:textSize="44sp"
                        android:layout_gravity="center" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No observations yet"
                    android:textSize="18sp"
                    android:textColor="#546E7A"
                    android:textStyle="bold"
                    android:layout_marginBottom="6dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add observations to document your journey"
                    android:textSize="14sp"
                    android:textColor="#90A4AE"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>